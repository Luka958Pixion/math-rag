Bootstrap: docker
From: python:3.12

%files
    requirements.txt /requirements.txt

%environment
    export PYTHONUNBUFFERED=1

%post
    pip install --upgrade pip
    pip install -r requirements.txt

%runscript
    python tgi.py

%labels
    Author luka.panic@pixion.co
    Version v0.0.1

%help
    Description:
        A client for Text Generation Inference (TGI) from Hugging Face.

    Build:
        apptainer build tgi_client.sif tgi_client.def

    Environment:
        - .env.hpc.hf.tgi

    Usage:
        apptainer run --env-file .env.hpc.hf.tgi tgi_client.sif